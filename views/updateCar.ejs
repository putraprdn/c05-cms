<form>
    <div class="form-card py-3 px-3 mt-3">
        <div class="row">
            <label
                class="form-label col-md-2 fs-12 col-form-label d-flex align-items-center">Nama<span>&#42;</span></label>
            <div class="col-md-10">
                <input type="name" class="form-control" id="name" placeholder="Avanza">
            </div>
        </div>
        <div class="row mt-3">
            <label class="form-label col-md-2 fs-12 col-form-label d-flex align-items-center">Sewa
                Per Hari<span>&#42;</span></label>
            <div class="col-md-10">
                <input type="number" class="form-control" id="harga" placeholder="Rp 0,-">
            </div>
        </div>
        <div class="row mt-3">
            <label
                class="form-label col-md-2 fs-12 col-form-label d-flex align-items-center">Ukuran<span>&#42;</span></label>
            <div class="col-md-10">
                <select class="form-select">
                    <option value="small">Small</option>
                    <option value="medium">Medium</option>
                    <option value="large">Large</option>
                </select>
            </div>
        </div>
        <div class="row mt-3">
            <label class="form-label col-md-2 fs-12 col-form-label d-flex">Foto<span>&#42;</span></label>
            <div class="col-md-10">
                <input class="form-control" type="file" id="formFile" style="height: 32px;">
                <div id="fileHelp" class="form-text">File size max. 2MB</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="btn-wrap">
            <a class="btn btn-outline-primary fs-14" href="#">
                Cancel
            </a>
            <a class="btn btn-primary fs-14 ms-3" href="#">
                Save
            </a>
        </div>
    </div>
</form>