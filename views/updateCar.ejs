<!-- <h1 class="main-title fs-20 mt-3 mb-0 fw-bold">Update Car Information</h1> -->
<form method="post" action="/api/car/update/<%= cars.data.id %> ">
    <div class="form-card py-3 px-3 mt-3">
        <div class="row">
            <label
                class="form-label col-md-2 fs-12 col-form-label d-flex align-items-center">Nama<span>&#42;</span></label>
            <div class="col-md-10">
                <input type="name" class="form-control" name="name" id="name" placeholder="Avanza"
                    value="<%= cars.data.name %>">
            </div>
        </div>
        <div class="row mt-3">
            <label class="form-label col-md-2 fs-12 col-form-label d-flex align-items-center">Sewa
                Per Hari<span>&#42;</span></label>
            <div class="col-md-10">
                <input type="number" class="form-control" id="rent_price" name="rent_price" placeholder="Rp 0,-"
                    value="<%= cars.data.rent_price %>">
            </div>
        </div>
        <div class="row mt-3">
            <label
                class="form-label col-md-2 fs-12 col-form-label d-flex align-items-center">Ukuran<span>&#42;</span></label>
            <div class="col-md-10">
                <select class="form-select" name="size" id="size">
                    <% if (cars.data.size=="small" ){ %>
                        <option value="small" selected>Small</option>
                        <option value="medium">Medium</option>
                        <option value="large">Large</option>
                        <% } else if (cars.data.size=="medium" ) { %>
                            <option value="small">Small</option>
                            <option value="medium" selected>Medium</option>
                            <option value="large">Large</option>
                            <% } else { %>
                                <option value="small">Small</option>
                                <option value="medium">Medium</option>
                                <option value="large" selected>Large</option>
                                <% } %>
                </select>
            </div>
        </div>
        <div class="row mt-3">
            <label class="form-label col-md-2 fs-12 col-form-label d-flex">Foto</label>
            <div class="col-md-10">
                <input class="form-control" type="file" id="image" name="image" style="height: 32px;"
                    value="<%= cars.data.image %>">
                <div id="fileHelp" class="form-text">File size max. 2MB</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="btn-wrap">
            <a class="btn btn-outline-primary fs-14" href="/">
                Cancel
            </a>
            <button class="btn btn-primary fs-14 ms-3" type="submit">
                Save
            </button>
        </div>
    </div>
</form>