<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script type="text/javascript" src="https://code.jquery.com/jquery-1.7.1.min.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="shortcut icon" href="/images/icon.png" type="image">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">

    <title>Binar | Car Management Dashboard</title>
</head>

<body>
    <main>
        <div class="row mx-0">
            <!-- Side Menu -->
            <%- include('menu') %>
                <!-- End Side Menu -->
                <div class="rigth-wrap col-md-11 px-0">
                    <!-- Navbar -->
                    <%- include('navbar') %>
                        <!-- End Navbar -->
                        <div class="row">
                            <%- include('sidebar') %>
                                <!-- Main Body -->
                                <div class="col-md-10">
                                    <div class="main">
                                        <div class="breadcrumb d-flex align-items-center gap-2">
                                            <span class="fs-12">
                                                Cars
                                            </span>
                                            <img src="/images/Vector_right.png" alt="">
                                            <% if (url=="home" || url=="/" ) { %>
                                                <span class="active fs-12">List Car</span>
                                                <% var isTitle=true %>
                                                    <% } else { %>
                                                        <span class="fs-12"><a href="/"
                                                                class="text-decoration-none text-black">List
                                                                Car</a> </span>
                                                        <img src="/images/Vector_right.png" alt="">
                                                        <span class="active fs-12">
                                                            <%= title %>
                                                        </span>
                                                        <% } %>
                                        </div>
                                        <% if (!isTitle) { %>
                                            <h1 class="main-title fs-20 mt-3 mb-0 fw-bold">
                                                <%= title %>
                                            </h1>
                                            <% } %>

                                                <!-- Main Content -->
                                                <%- body %>
                                    </div>
                                </div>
                                <!-- End Main Body -->
                        </div>
                </div>
        </div>
    </main>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $(document).on('click', '.delete_btn', function (e) {
                e.preventDefault();

                const id = $(this).data('id');
                // alert('/api/car/delete/'+ id);
                $('#modal-form').attr('action', '/api/car/delete/' + id);
            })
        });

        $(".alert").delay(3000).slideUp(200, function () {
            $(this).alert('close');
        });


    </script>

</body>

</html>